        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <com.example.hbaltz.sub.View.FaultDrawSurfaceView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/faultDrawView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software" />

    <com.example.hbaltz.sub.View.GeoDrawSurfaceView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/geoDrawView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software" />

    <com.example.hbaltz.sub.View.FtDrawSurfaceView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ftDrawView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software"/>

    <com.example.hbaltz.sub.View.DrawSurfaceView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
